------------------------------------------------------------------------------------------------------------------------
-- The Hungry Rabbit executable contains the main function that drives our solution.
------------------------------------------------------------------------------------------------------------------------
module executable


from hungry_rabbit.implementation import hungry_rabbit


------------------------------------------------------------------------------------------------------------------------
-- The singleton containing the main entry point of the executable
------------------------------------------------------------------------------------------------------------------------
singleton executable:


    --------------------------------------------------------------------------------------------------------------------
    -- public interface
    --------------------------------------------------------------------------------------------------------------------

        ----------------------------------------------------------------------------------------------------------------
        -- The main entry point of the executable
        ----------------------------------------------------------------------------------------------------------------
        method main:
            code:
                -- solve the hungry rabbit problem, given this garden
                eaten = hungry_rabbit.forage(carrot_matrix_to_forage=garden)


    --------------------------------------------------------------------------------------------------------------------
    -- private state
    --------------------------------------------------------------------------------------------------------------------

        ----------------------------------------------------------------------------------------------------------------
        -- Our garden
        ----------------------------------------------------------------------------------------------------------------
        member garden is matrix(4,5) of integer = (
            5, 7, 8, 6, 3,
            0, 0, 7, 0, 4,
            4, 6, 3, 4, 9,
            3, 1, 0, 5, 8
        )
