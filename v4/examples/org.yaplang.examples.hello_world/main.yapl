------------------------------------------------------------------------------------------------------------------------
-- This module contains our program's entry point from the operating system
------------------------------------------------------------------------------------------------------------------------
module main

from os.human_computer_interface import terminal

------------------------------------------------------------------------------------------------------------------------
-- A "hello world" implementation, in YAPL
------------------------------------------------------------------------------------------------------------------------
singleton executable:

    --------------------------------------------------------------------------------------------------------------------
    -- The main entry point of the executable
    --------------------------------------------------------------------------------------------------------------------
    method main:
        code:
            -- inform the world, that we said hello
            effect = terminal.write_line(hello_world="Hello world!")


    ----------------------------------------------------------------------------------------------------------------
    -- when the main method is invoked
    ----------------------------------------------------------------------------------------------------------------
    test main:
        when:
            main()
        then:
            effect == terminal.write_line.wrote_line(hello_world = "Hello world!")
